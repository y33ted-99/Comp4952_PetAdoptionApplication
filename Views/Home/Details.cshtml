@model PetAdoptionApp.Models.Pet

<h1 class="text-center">@Model.Name</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            @if (Model.ImageUrl != null)
            {
                string imageBase64 = Convert.ToBase64String(Model.ImageUrl);
                string imageDataURL = $"data:image/jpeg;base64,{imageBase64}";
                <img src="@imageDataURL" alt="@Model.Name" class="img-fluid" />
            }
        </div>
        <div class="col-md-6">
            <h3>Details</h3>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Breed:</strong> @Model.Breed</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Is Favorite:</strong> @(Model.IsFavorite ? "Yes" : "No")</p>
            <p><strong>Tags:</strong> @(Model.Tags != null && Model.Tags.Any() ? string.Join(", ", Model.Tags.Select(t => t.Name)) : "None")</p>
        </div>
    </div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">Back to All Pets</a>
</div>
