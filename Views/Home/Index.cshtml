@model IEnumerable<PetAdoptionApp.Models.Pet>

<h1>All Pets</h1>

@foreach (var pet in Model)
{
    <div>
        <h3>@pet.Name</h3>
        <p>@pet.Age</p>
        <img src="@pet.ImageUrl" alt="@pet.Name" width="150" />
        <a href="@Url.Action("Details", "Pets", new { id = pet.Id })">View Details</a>

        <!-- Add button to mark/unmark as favorite -->
        <form method="post" action="@Url.Action("ToggleFavorite", "Pets", new { id = pet.Id })">
            <button type="submit">
                @(pet.IsFavorite ? "Unfavorite" : "Favorite")
            </button>
        </form>
    </div>
}
